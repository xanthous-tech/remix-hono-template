    "@tanstack/react-query": "^5.59.13",
    "bullmq": "^5.19.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-backend": "^2.7.1",
    "ioredis": "^5.4.1",
    "minio": "^8.0.1",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "pino-pretty": "^11.2.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.0.1",
    "stripe": "^17.2.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.0.2",
    "@astrojs/react": "^4.1.1",
